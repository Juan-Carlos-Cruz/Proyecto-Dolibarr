{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": ["./types"],
    "outDir": "dist",
    "rootDir": "."
  },
  "include": [
    "playwright/tests/**/*.ts",
    "playwright/fixtures/**/*.ts",
    "playwright/helpers/**/*.ts",
    "playwright/simulator/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
